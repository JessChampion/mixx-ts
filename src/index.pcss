@import 'variables.pcss';

html, body, #root {
  height: 100%;
  margin: 0;
  padding: 0;
  overflow: hidden;
}

body {
  margin: -2rem 0;
  padding: 2rem 0;
  width: 100%;
  height: 100%;
  font-size: 15px;
  font-family: 'Quicksand', Arial, sans-serif;
  line-height: 1.4;
  background: var(--colour-black);
  color: var(--colour-white);
}

h1, h2, h3, h4, h5, h6 {
  font-family: 'Permanent Marker', 'Quicksand', Arial, sans-serif;
  font-weight: bold;
}

.header {
  padding: 0 0.5rem;
}